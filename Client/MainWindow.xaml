        <Label Grid.Row="0" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" Content="昵称" />
        <TreeView Grid.Row="1" HorizontalAlignment="Stretch"  Name="tvFriends" VerticalAlignment="Stretch"  />
        <Button Content="设置" Grid.Row="2" Height="23" HorizontalAlignment="Left" Margin="22,15,0,0" Name="btnConfig" VerticalAlignment="Top" Width="75" Click="btnConfig_Click" />
        <Button Content="刷新" Grid.Row="2" Height="23" HorizontalAlignment="Left" Margin="132,15,0,0" Name="btnRefresh" VerticalAlignment="Top" Width="75" Click="btnRefresh_Click" />
    </Grid>
</Window>
