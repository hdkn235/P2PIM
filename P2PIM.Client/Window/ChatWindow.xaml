<Window x:Class="P2PIM.Client.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatWindow" Height="350" Width="408">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="txtTalk"  HorizontalContentAlignment="Stretch" />
        <TextBox Grid.Row="1" Name="txtSend"  HorizontalContentAlignment="Stretch" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Button Content="关闭" Grid.Column="1" Height="23" HorizontalAlignment="Center"  Name="btnClose" VerticalAlignment="Center" Width="75" />
            <Button Content="发送" Grid.Column="2" Height="23" HorizontalAlignment="Center"  Name="btnSend" VerticalAlignment="Center" Width="75" Click="btnSend_Click" />
        </Grid>
    </Grid>
</Window>
